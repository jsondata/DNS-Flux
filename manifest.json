{
  "name": "DNS-Flux",
  "version": "1.2.3",
  "manifest_version": 3,
  "description": "Flush DNS cache and reload page by one click",
  "action": {
    "default_title": "Flush DNS and Reload"
  },
  "commands": {
    "flush-and-reload": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Alt+Shift+F"
      },
      "description": "Flush DNS and Reload"
    }
  },
  "options_page": "src/pages/options.html",
  "background": {
    "service_worker": "src/js/background.js"
  },
  "icons": {
    "16": "src/assets/images/icon16.png",
    "48": "src/assets/images/icon48.png",
    "128": "src/assets/images/icon128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "alarms",
    "offscreen"
  ]
}

